<h2><%= @artist.name %></h2>
<h3><%= @artist.nationality %></h3>
<img src="<%= @artist.photo_url %>" width=300>

<h4>Albums</h4>

<div class="songs">
  <div class="row">
    <ul>
      <% @albums.each do |song| %>
        <li><a href="/songs/<%= song.id %>"><%= song.title %></a></li>
      <% end %>
    </ul>
  </div>
</div>