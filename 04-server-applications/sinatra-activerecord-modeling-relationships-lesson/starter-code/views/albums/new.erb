<h2>New album</h2>

<form action="/albums" method="post">
  <label for="album[title]">Title:</label>
  <input name="album[title]">
  <br>
  <label for="album[poster]">Poster:</label>
  <input name="album[poster]">
  <br>
  <label for="album[artist_id]">Artist:</label>
  <select name="album[artist_id]">
    <% @artists.each do |artist| %>
      <option value="<%= artist.id %>"><%= "#{artist.name}" %></option>
    <% end %>
  </select>
  <br>
  <label for="album[price]">Price (cents):</label>
  <input name="album[price]">
  <br>
  <label for="album[genre_ids]">Genres:</label>
  <br>
  <% Genre.all.each do |genre| %>
    <label for="genre_<%= genre.id%>"><%= genre.name %></label>
    <input type="checkbox" name="album[genre_ids][]" id="genre_<%= genre.id%>" value="<%= genre.id%>">
    <br>
  <% end %>
  <input type="submit" value="Create">
</form>