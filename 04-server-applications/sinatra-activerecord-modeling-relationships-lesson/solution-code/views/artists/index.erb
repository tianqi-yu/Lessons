<h2>Artists</h2>

<a class="btn" href="/artists/new">Add Artist</a>

<div class="artists">
  <% @artists.each do |artist| %>
  <div class="row">
    <img src="<%= artist.photo_url %>" alt="<%= artist.name %> photo" width=300>
    <ul>
      <li>
        <h2>
          <a href="/artists/<%= artist.id %>">
            <%= artist.name %>
          </a>
        </h2>
      </li>
      <li>
        <a href="/artists/<%= artist.id %>/edit">
          Edit
        </a>
      </li>
      <li>
        <form method="post" action="/artists/<%= artist.id %>/delete">
          <button>Delete</button>
        </form>
      </li>
    </ul>
  </div>
  <% end %>
</div>
